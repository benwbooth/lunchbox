{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lunchbox",
  "version": "0.1.0",
  "identifier": "com.lunchbox.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:1420",
    "beforeDevCommand": "trunk serve --port 1420",
    "beforeBuildCommand": "trunk build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Lunchbox",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
